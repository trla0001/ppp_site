---
const { titel, liste1, liste2, liste3, liste4 } = Astro.props;
---

<article class="bg-[#A8A0BB] text-[#252020] w-[228px] h-[226px] lg:w-[278px] lg:h-[276px] shadow-[0px_4px_7px_-2px_rgba(0,0,0,0.25)] inline-flex flex-col items-center justify-center">
  <div class="text-left">
    <h3 class="text-xl lg:text-2xl text-left pb-2">{titel}</h3>
    <ul class="list-disc text-left ml-4">
      <li class="text-base lg:text-m">{liste1}</li>
      <li class="text-base lg:text-m">{liste2}</li>
      <li class="text-base lg:text-m">{liste3}</li>
      <li class="text-base lg:text-m">{liste4}</li>
    </ul>
  </div>
</article>

<style>
  ul li::marker {
    color: #67568c; /* Ændrer prikken til rød */
  }
</style>

<script>
  // Få fat i alle <li>-elementer
  const listItems = document.querySelectorAll("ul li");

  // Loop gennem hvert <li>-element og tjek om det er tomt
  listItems.forEach(function (li) {
    if (!li.textContent.trim()) {
      // Tjek om <li> er tomt (efter fjernelse af mellemrum)
      li.style.display = "none"; // Skjul <li> hvis det er tomt
    }
  });
</script>
